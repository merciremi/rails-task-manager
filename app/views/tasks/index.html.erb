<div class="container">
  <div class="row">
    <h1 class="underlined">My tasks</h1>
    <ul>
      <% @tasks.each do |task| %>
        <li>
          <% if task.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%= link_to "#{task.title.capitalize}", task_path(task) %> -
          <%= link_to delete_path(task),
              method: 'delete',
              data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
    <hr>
    <div><i class="fas fa-plus"></i> <%= link_to 'Add a new task', new_path %></div>
  </div>
</div>
